<%= form_with(model: micropost) do |form| %>
  <% if micropost.errors.any? %>
    <div class="pl-6 pt-6">
      <div class="py-2 px-4 rounded-lg max-w-sm text-xl text-white bg-red-500">
        <h2><%= pluralize(micropost.errors.count, "error") %> prohibited this micropost from being saved:</h2>

        <ul>
          <% micropost.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="pl-6 pt-6">
    <%= form.label :content, class: "text-xl font-semibold" %>
    <%= form.text_area :content, placeholder: "content", class: "rounded text-xl shadow-md border border-transparent focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <div class="pl-6 pt-6">
    <%= form.label :user_id, class: "text-xl font-semibold" %>
    <%= form.number_field :user_id, placeholder: "user id", class: "rounded text-xl shadow-md border border-transparent focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <div class="pl-6 pt-6">
    <%= form.submit class: "btn-blue" %>
  </div>
<% end %>
